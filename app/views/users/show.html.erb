<% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <h1>
          <%= @user.name %>
        </h1>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render 'users/follow_form' if user_signed_in? %>
      <% if @user.articles.any? %>
        <h3>articles (<%= @user.articles.count %>)</h3>
        <ol class="articles">
          <%= render @articles %>
        </ol>
      <% end %>
    </div>
  </div>
